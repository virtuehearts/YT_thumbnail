<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YouTube Thumbnail Generator</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-slate-950 text-white min-h-screen">
    <div class="max-w-6xl mx-auto px-6 py-10">
      <header class="mb-8">
        <h1 class="text-3xl font-bold">YouTube Thumbnail Generator</h1>
        <p class="text-slate-300 mt-2">Choose a template, tweak the text, and generate a thumbnail preview.</p>
      </header>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <section class="bg-slate-900 border border-slate-800 rounded-2xl p-6">
          <form id="thumbnail-form" class="space-y-5" enctype="multipart/form-data">
            <div>
              <label class="block text-sm font-semibold mb-2" for="template">Template</label>
              <select
                id="template"
                name="template"
                class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
              >
                <% templates.forEach((template) => { %>
                <option value="<%= template.id %>" data-template='<%- JSON.stringify(template) %>'>
                  <%= template.name %>
                </option>
                <% }) %>
              </select>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" for="style_preset">Style preset</label>
              <select
                id="style_preset"
                name="style_preset"
                class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
              >
                <option value="">Custom</option>
                <% stylePresets.forEach((preset) => { %>
                <option value="<%= preset.id %>" data-preset='<%- JSON.stringify(preset) %>'>
                  <%= preset.name %>
                </option>
                <% }) %>
              </select>
              <div class="mt-3 grid grid-cols-1 md:grid-cols-[1fr_auto] gap-3">
                <input
                  id="preset_name"
                  name="preset_name"
                  placeholder="New preset name"
                  class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
                />
                <button
                  type="button"
                  id="save-preset"
                  class="bg-slate-700 hover:bg-slate-600 transition-colors text-white font-semibold px-4 py-2 rounded-lg"
                >
                  Save preset
                </button>
              </div>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" for="main_title">Main title</label>
              <input
                id="main_title"
                name="main_title"
                class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
                required
              />
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold mb-2" for="left_caption">Left caption</label>
                <textarea
                  id="left_caption"
                  name="left_caption"
                  rows="3"
                  class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
                  required
                ></textarea>
              </div>
              <div>
                <label class="block text-sm font-semibold mb-2" for="right_caption">Right caption</label>
                <textarea
                  id="right_caption"
                  name="right_caption"
                  rows="3"
                  class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
                  required
                ></textarea>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold mb-2" for="primary_color">Primary color</label>
                <input
                  id="primary_color"
                  name="primary_color"
                  type="color"
                  class="w-full h-12 bg-slate-800 border border-slate-700 rounded-lg"
                  required
                />
              </div>
              <div>
                <label class="block text-sm font-semibold mb-2" for="font_size">Font size</label>
                <input
                  id="font_size"
                  name="font_size"
                  type="number"
                  min="32"
                  max="96"
                  step="2"
                  class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
                  required
                />
              </div>
            </div>

            <div>
              <label class="block text-sm font-semibold mb-2" for="image">Upload image</label>
              <input
                id="image"
                name="image"
                type="file"
                accept="image/jpeg"
                class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
                required
              />
              <p class="text-xs text-slate-400 mt-2">JPEG only for consistent thumbnail export.</p>
            </div>

            <div class="border border-slate-800 rounded-xl p-4 bg-slate-950/40">
              <h3 class="text-sm uppercase tracking-wide text-slate-400 mb-3">Layout controls</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-semibold mb-2" for="banner_height">Banner height</label>
                  <input
                    id="banner_height"
                    name="banner_height"
                    type="number"
                    min="80"
                    max="200"
                    step="2"
                    class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
                    required
                  />
                </div>
                <div>
                  <label class="block text-sm font-semibold mb-2" for="panel_height">Panel height</label>
                  <input
                    id="panel_height"
                    name="panel_height"
                    type="number"
                    min="140"
                    max="320"
                    step="2"
                    class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
                    required
                  />
                </div>
                <div>
                  <label class="block text-sm font-semibold mb-2" for="panel_margin">Panel margin</label>
                  <input
                    id="panel_margin"
                    name="panel_margin"
                    type="number"
                    min="16"
                    max="80"
                    step="2"
                    class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
                    required
                  />
                </div>
                <div>
                  <label class="block text-sm font-semibold mb-2" for="panel_gap">Panel gap</label>
                  <input
                    id="panel_gap"
                    name="panel_gap"
                    type="number"
                    min="10"
                    max="80"
                    step="2"
                    class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
                    required
                  />
                </div>
                <div>
                  <label class="block text-sm font-semibold mb-2" for="panel_padding">Panel padding</label>
                  <input
                    id="panel_padding"
                    name="panel_padding"
                    type="number"
                    min="10"
                    max="60"
                    step="2"
                    class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
                    required
                  />
                </div>
                <div>
                  <label class="block text-sm font-semibold mb-2" for="divider_width">Divider width</label>
                  <input
                    id="divider_width"
                    name="divider_width"
                    type="number"
                    min="2"
                    max="20"
                    step="1"
                    class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
                    required
                  />
                </div>
                <div>
                  <label class="block text-sm font-semibold mb-2" for="divider_opacity">Divider opacity</label>
                  <input
                    id="divider_opacity"
                    name="divider_opacity"
                    type="number"
                    min="40"
                    max="200"
                    step="5"
                    class="w-full bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
                    required
                  />
                </div>
              </div>
            </div>

            <button
              type="submit"
              class="w-full bg-indigo-500 hover:bg-indigo-400 transition-colors text-white font-semibold px-4 py-3 rounded-lg"
            >
              Generate thumbnail
            </button>
          </form>
        </section>

        <section class="bg-slate-900 border border-slate-800 rounded-2xl p-6 flex flex-col">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold">Preview</h2>
            <span id="status" class="text-sm text-slate-400">Awaiting generation</span>
          </div>
          <div class="flex-1 flex items-center justify-center bg-slate-950/50 border border-dashed border-slate-700 rounded-xl p-4">
            <img
              id="preview"
              src=""
              alt="Thumbnail preview"
              class="max-h-[420px] w-full object-contain hidden"
            />
            <p id="placeholder" class="text-slate-500">Your generated thumbnail will appear here.</p>
          </div>
        </section>
      </div>

      <section class="mt-10 bg-slate-900 border border-slate-800 rounded-2xl p-6">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-6">
          <div>
            <h2 class="text-xl font-semibold">Template variations</h2>
            <p class="text-slate-400 text-sm">Edit, save, and export JSON templates for different content types.</p>
          </div>
          <div class="flex flex-wrap gap-3">
            <select
              id="content_type"
              class="bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
            >
              <option value="comparison">Comparison</option>
              <option value="product_launch">Product launch</option>
              <option value="announcement">Announcement</option>
            </select>
            <select
              id="json_template"
              class="bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
            ></select>
          </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <h3 class="text-sm font-semibold text-slate-300">Template JSON</h3>
              <div class="flex gap-2">
                <button type="button" id="format-template" class="text-xs bg-slate-800 px-3 py-1.5 rounded-lg">
                  Format
                </button>
                <button type="button" id="export-template" class="text-xs bg-slate-800 px-3 py-1.5 rounded-lg">
                  Export
                </button>
              </div>
            </div>
            <textarea
              id="template_json"
              rows="14"
              class="w-full bg-slate-950 border border-slate-800 rounded-xl px-3 py-2 font-mono text-xs text-slate-200"
            ></textarea>
          </div>

          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <h3 class="text-sm font-semibold text-slate-300">Vars JSON</h3>
              <div class="flex gap-2">
                <button type="button" id="format-vars" class="text-xs bg-slate-800 px-3 py-1.5 rounded-lg">
                  Format
                </button>
                <button type="button" id="export-vars" class="text-xs bg-slate-800 px-3 py-1.5 rounded-lg">
                  Export
                </button>
              </div>
            </div>
            <textarea
              id="vars_json"
              rows="14"
              class="w-full bg-slate-950 border border-slate-800 rounded-xl px-3 py-2 font-mono text-xs text-slate-200"
            ></textarea>
          </div>
        </div>

        <div class="mt-6 grid grid-cols-1 lg:grid-cols-[1fr_1fr_auto] gap-4">
          <input
            id="json_template_name"
            placeholder="Template name"
            class="bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
          />
          <input
            id="json_template_type"
            placeholder="Content type"
            class="bg-slate-800 border border-slate-700 rounded-lg px-3 py-2"
          />
          <div class="flex gap-2">
            <button type="button" id="save-json-template" class="bg-indigo-500 hover:bg-indigo-400 px-4 py-2 rounded-lg">
              Save template
            </button>
            <button type="button" id="update-json-template" class="bg-slate-700 hover:bg-slate-600 px-4 py-2 rounded-lg">
              Update selected
            </button>
          </div>
        </div>
      </section>
    </div>

    <script>
      window.jsonTemplates = <%- JSON.stringify(jsonTemplates) %>;
    </script>
    <script src="/app.js"></script>
  </body>
</html>
